<%- include('./components/navHeader.ejs') %>

    <div class="container">
        <div class="d-flex justify-content-center">
            <h1>Register Page</h1>
        </div>
        <form action="" method="post">
            <div class="mb-3">
                <label for="" class="form-label">Username</label>
                <input type="text" class="form-control" placeholder="register your username" name="username">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email" placeholder="register your email">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="password" placeholder="register your password">
            </div>
            <div class="mb-3">
                <label for="" class="form-label">Role</label>
                <select class="form-select" aria-label="Default select example" name="role">
                    <option selected disabled>select role</option>
                    <option value="admin">Admin</option>
                    <option value="user">User</option>
                  </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

</body>
</html>