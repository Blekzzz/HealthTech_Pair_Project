<%- include('./components/navHeader.ejs') %>

    <div class="container">
        <h1>What's Your Diseases?</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Diseases</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((el, i) => { %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= el.name %></td>
                        <td>
                            <a href="/diseases/<%=el.id%>"><button class="btn btn-dark">Detail</button></a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>
</html>